@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<aside class="offset-4 col-sm-4 h-100">
    <h4 class="text-center">Annual Health Check Program</h4>
    <div class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Login</h4>
            <hr>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-center text-danger"></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" type="email" autocomplete="off">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Login </button>
                </div>
                <p class="text-center">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="btn">Forgot your password?</a>
                </p>
            </form>
        </article>
    </div>
</aside>

